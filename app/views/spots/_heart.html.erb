<% if spot.users.include?(current_user) %>
  <i class="fa-solid fa-heart" style="color: #ffffff; " data-controller="favorite" data-method="DELETE" data-url="<%= favorite_spot_path(FavoriteSpot.find_by(user: current_user, spot: spot)) %>" data-action="click->favorite#toggle"></i>
<% else %>
  <i class="fa-regular fa-heart" style="color: #ffffff;" data-controller="favorite" data-method="POST" data-url="<%= spot_favorite_spots_path(spot) %>" data-action="click->favorite#toggle"></i>
<% end %>
