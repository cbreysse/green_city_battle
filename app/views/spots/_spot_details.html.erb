<div class="overlay" data-map-target="spotDetailsContent" data-controller="spot-details">
  <div class="d-flex justify-content-end w-100">
    <button class="btn-close" data-action="click->spot-details#closeOverlay"></button>
  </div>
  <h2><%= address_formatter spot.address %></h2>

  <%= render "heart", spot: @spot %>
  <%= form_with url: spot_favorite_spots_path(@spot)  do |f| %>
  <% end %>

  <% if spot.photo.key? %>
    <%= cl_image_tag spot.photo.key, width: 300, height: 160, crop: :fill %>
  <% else %>
    <%= image_tag "spot_default.jpeg", width: "120%", height: 160 %>
  <% end %>
  <%= render "spot_actions" %>
  <%= render "participations_history" %>
</div>
