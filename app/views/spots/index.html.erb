<div
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-user-marker-value='<%= @user_marker %>'
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <div data-map-target="map" style="width: 100%; height: 100vh;"></div>

  <div
    data-controller="spot-details"
    data-map-target="spotDetails"
    class="overlay"
  >
    <div class="d-flex justify-content-end w-100">
      <button class="btn btn-close" data-action="click->spot-details#closeOverlay"></button>
    </div>
    <h2 data-spot-details-target="title"></h2>
    <p data-spot-details-target="address"></p>
  </div>
</div>
