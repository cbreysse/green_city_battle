      action_id: action_id,
      path: new_spot_participation_path(params[:id], action_type: action_id),
      should_block: block_action(params[:id],action_id),
      spot_id: params[:id] do
    %>
      <%= render "shared/badge", { badge_img: "plant_watering.png", badge_text: "Arroser", custom_class: "mb-2 action-btn", timer: true, spot_id: params[:id], action_id: action_id } %>
